<%- include ('header') %>
<h2 class="text-center">Write a New Entry</h2>
<form method="post" role="form">

    <div class="form-group">
        <label for="title">Population</label>
        <input type="number" data-population="" class="form-control" id="population" name="population"
            placeholder="Entry population" required>
    </div>

    <div class="form-group">
        <label for="content">Time to Elapse</label>
        <input type="number" class="form-control" data-time-to-elapse="" id="timeToElapse" name="timeToElapse"
            placeholder="Enter time to lapse" required>
    </div>

    <div class="form-group">
        <label for="content">Reported Cases</label>
        <input type="number" class="form-control" data-reported-cases="" id="reportedCases" name="reportedCases"
            placeholder="Enter reported cases" required>
    </div>

    <div class="form-group">
        <label for="title"> Total Hospital Beds </label>
        <input type="number" class="form-control" type="text" data-total-hospital-beds="" id="totalHospitalBeds"
            name="totalHospitalBeds" placeholder="Enter total hospital beds" required>
    </div>

    <div class="form-group">
        <h4 class="text-center">Period Type</h4>
        <div class="radio">
            <label><input type="radio" name="periodType" value="days" required> Days</label>
        </div>
        <div class="radio">
            <label><input type="radio" name="periodType" value="weeks" required> Weeks</label>
        </div>
        <div class="radio">
            <label><input type="radio" name="periodType" value="months" required> Months</label>
        </div>

        <div>
            <input type="submit" data-go-estimate="" value="Submit Entry" class="btn btn-primary btn-block" />
        </div>
    </div>
</form>

<%- include ('footer') %>